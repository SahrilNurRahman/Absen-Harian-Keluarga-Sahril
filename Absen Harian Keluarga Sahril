<body>
  <div class="container">
    <h1>📋 Absen Harian Keluarga Sahril</h1>
    <input type="text" id="nama" placeholder="Nama kamu">
    <select id="status">
      <option value="">-- Pilih keadaan kamu --</option>
      <option value="Lagi di rumah 🏠">Lagi di rumah 🏠</option>
      <option value="Lagi sekolah 🎒">Lagi sekolah 🎒</option>
      <option value="Lagi kerja 💼">Lagi kerja 💼</option>
      <option value="Lagi keluar 🚶‍♂️">Lagi keluar 🚶‍♂️</option>
      <option value="Lagi makan 🍜">Lagi makan 🍜</option>
      <option value="Lagi istirahat 😴">Lagi istirahat 😴</option>
    </select>
    <button onclick="absen()">Kirim Absen</button>

    <div class="log" id="log"></div>
  </div>

  <script>
    function absen() {
      const nama = document.getElementById('nama').value.trim();
      const status = document.getElementById('status').value;
      const waktu = new Date().toLocaleString('id-ID', { hour12: false });

      if (!nama || !status) {
        alert('Isi nama dan status dulu ya!');
        return;
      }

      const logBox = document.getElementById('log');
      const entry = document.createElement('p');
      entry.textContent = `${waktu} — ${nama}: ${status}`;
      logBox.prepend(entry);

      // Simpan ke localStorage biar nggak hilang kalau refresh
      const data = JSON.parse(localStorage.getItem('absenKeluarga')) || [];
      data.unshift(entry.textContent);
      localStorage.setItem('absenKeluarga', JSON.stringify(data));
    }

    // Load data lama
    window.onload = function() {
      const data = JSON.parse(localStorage.getItem('absenKeluarga')) || [];
      const logBox = document.getElementById('log');
      data.forEach(d => {
        const p = document.createElement('p');
        p.textContent = d;
        logBox.appendChild(p);
      });
    };
  </script>
</body>
